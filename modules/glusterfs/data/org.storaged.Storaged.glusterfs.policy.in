<?xml version="1.0" encoding="utf-8"?>

<!DOCTYPE policyconfig PUBLIC
 "-//freedesktop//DTD PolicyKit Policy Configuration 1.0//EN"
 "http://www.freedesktop.org/standards/PolicyKit/1.0/policyconfig.dtd">

<policyconfig>
  <vendor>The Storaged Project</vendor>
  <vendor_url>https://github.com/storaged-project/storaged</vendor_url>
  <icon_name>drive-removable-media</icon_name>

  <!-- ###################################################################### -->
  <!-- Manage GlusterFS -->

  <action id="org.storaged.Storaged.glusterfs.manage-glusterfs">
    <_description>Manage GlusterFS</_description>
    <_message>Authentication is required to manage GlusterFS</_message>
    <defaults>
      <allow_any>auth_admin</allow_any>
      <allow_inactive>auth_admin</allow_inactive>
      <allow_active>auth_admin_keep</allow_active>
    </defaults>
  </action>

</policyconfig>
